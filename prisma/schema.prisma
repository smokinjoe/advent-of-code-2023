// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Day {
  id        String  @id @default(uuid())
  day       Int     @unique
  title     String
  sourceUrl String
  inputs    DayInput[]
}

model DayInput {
  id        String @id @default(uuid())
  title     String
  dayId     String
  day       Day    @relation(fields: [dayId], references: [id])
  type      String
  content   String
}